<Page x:Class="Uchebnaya_Azaliya.Pages.ListStudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Uchebnaya_Azaliya.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListStudentPage">

    <Grid>
        <ListView x:Name="ListStudentList" SelectionChanged="ListStudentList_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="150" Header="Код студента" DisplayMemberBinding="{Binding Student.Id_Student}"></GridViewColumn>
                    <GridViewColumn Width="150" Header="Специальность" DisplayMemberBinding="{Binding Student.Id_Spec}"></GridViewColumn>
                    <GridViewColumn Width="150" Header="ФИО" DisplayMemberBinding="{Binding Student.Surname_Student}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
