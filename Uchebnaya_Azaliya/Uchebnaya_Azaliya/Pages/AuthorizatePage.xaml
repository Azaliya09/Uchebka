<Page x:Class="Uchebnaya_Azaliya.Pages.AuthorizatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Uchebnaya_Azaliya.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizatePage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center">Необходимо войти в систему</TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock>Логин: </TextBlock>
                <TextBox x:Name="LoginTb" Margin="5" Height="30"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock>Пароль:</TextBlock>
                <PasswordBox x:Name="PasswordPb"  Margin="5" Height="30"></PasswordBox>
            </StackPanel>
            <Button x:Name="EnterBtn" Click="EnterBtn_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
