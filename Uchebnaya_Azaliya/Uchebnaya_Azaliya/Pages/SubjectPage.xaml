<Page x:Class="Uchebnaya_Azaliya.Pages.SubjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Uchebnaya_Azaliya.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SubjectPage">

    <Grid>
        <ListView x:Name="SubjectList" SelectionChanged="SubjectList_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="150" Header="Дисциплина" DisplayMemberBinding="{Binding Subject.Name_Subject}"></GridViewColumn>
                    <GridViewColumn Width="150" Header="Аббревиатура" DisplayMemberBinding="{Binding Subject.Id_Lectern}"></GridViewColumn>
                    <GridViewColumn Width="150" Header="Код" DisplayMemberBinding="{Binding Name_Subject.Id_Subject}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
